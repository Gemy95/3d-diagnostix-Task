 </head>
 <body>
<div class="container-fluid containers">
        <% include ./partials/navbar %>
   <br>
<div style="min-height: 520px;">
<% if(data['result'].length>0) { %>

<div class="row">
  <div class="col-12 text-center"><h2>My Published Quizes</h2></div>
</div>

<br>
<div class="row" >
  <div class="col-12" style="text-align: center;">
    <div class="col-11 text-center" style="margin: 0 auto;min-height: 400px;" >
        <% for (var i = 0 ; i < data['result'].length ; i++) { %>
            <div class="card">
                    <h4 class="card-header"><%=data['result'][i]['name']%></h4>
                    <div class="card-body">
                      <h4 class="card-title"><%=data['result'][i]['category']%> Exam</h4>
                      <p class="card-text"><b>Exam Code: <%=data['result'][i]['code']%></b></p>
                      <a href="/getSingleQuiz/<%=data['result'][i]['ID']%>" class="btn btn-primary">Show Quiz</a>
                    </div>
            </div>
            <br>
         <% } %>  
    </div>
  </div>
</div>

